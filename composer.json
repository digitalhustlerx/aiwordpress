{
  "name": "antigravity/aiwp-copilot",
  "description": "AI-powered WordPress content assistant",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Antigravity",
      "email": "dev@antigravity.dev"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "wp-phpunit/wp-phpunit": "^6.0",
    "yoast/phpunit-polyfills": "^1.0",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.4",
    "phpstan/phpstan": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite 'Unit Tests'",
    "test:integration": "phpunit --testsuite 'Integration Tests'",
    "test:security": "phpunit --testsuite 'Security Tests'",
    "test:coverage": "phpunit --coverage-html coverage/php",
    "phpstan": "phpstan analyse --level=5 includes aiwp-copilot.php",
    "phpcs": "phpcs --standard=WordPress includes aiwp-copilot.php",
    "phpcbf": "phpcbf --standard=WordPress includes aiwp-copilot.php"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/php/"
    }
  }
}
